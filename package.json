{
  "name": "openwatch",
  "version": "1.0.0",
  "description": "Government Transparency & Governance Platform",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "start": "cd backend && npm start",
    "test": "npm run test:frontend && npm run test:backend",
    "test:frontend": "cd frontend && npm test",
    "test:backend": "cd backend && npm test",
    "install:all": "npm install && cd frontend && npm install && cd ../backend && npm install"
  },
  "devDependencies": {
    "concurrently": "^7.6.0"
  },
  "keywords": [
    "government",
    "transparency",
    "governance",
    "public-records",
    "blockchain",
    "audit-trail"
  ],
  "author": "OpenWatch Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/openwatch.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/openwatch/issues"
  },
  "homepage": "https://github.com/your-org/openwatch#readme"
}